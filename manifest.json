{
  "manifest_version": 3,
  "name": "Volume Management",
  "version": "1.0",
  "description": "Control volume of all websites.",
  "icons": {
    "48": "icons/volume-48.png"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/popup.js"],
      "run_at": "document_start"
    }
  ]
}
